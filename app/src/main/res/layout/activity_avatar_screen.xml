<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Avatarscreen"
    android:background="@drawable/gradient_linear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/is_selected"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape_welcome"
            android:src="@drawable/validate"
            android:scaleType="center"
            android:layout_gravity="top"
        />
        <EditText
            android:id="@+id/username_define"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:text="Type Username"
            android:background="@drawable/button_shape_welcome"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>