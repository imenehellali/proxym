<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Inventory"
    android:layout_marginBottom="60dp">


        <android.support.design.widget.TabLayout
            android:id="@+id/inventory_tabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:tabMode="fixed"
            android:background="@drawable/button_shape">

        </android.support.design.widget.TabLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:id="@+id/fragmentBuilding"
            android:layout_marginVertical="60dp"
            android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="building fragment"
                    android:textSize="60sp"
                    android:layout_marginTop="250dp"
                    android:textStyle="bold"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_marginVertical="60dp"
            android:id="@+id/fragmentCrafting"
            android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="crafting fragment"
                    android:textSize="60sp"
                    android:layout_marginTop="250dp"
                    android:textStyle="bold"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:id="@+id/fragmentEquipment"
            android:layout_marginVertical="60dp"
            android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="equipment fragment"
                    android:textSize="60sp"
                    android:layout_marginTop="250dp"
                    android:textStyle="bold"
                    />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_marginVertical="60dp"
            android:orientation="vertical"
            android:id="@+id/layout_material"
            android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_animal_resource"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="5"
                    android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/animal"/>
                        <TextView
                            android:id="@+id/animal_resource_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_iron"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="5"
                    android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/iron"/>
                        <TextView
                            android:id="@+id/iron_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_leaf"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="5"
                    android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/leaf"/>
                        <TextView
                            android:id="@+id/leaf_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_bomb"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="5"
                    android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/bomb"/>
                        <TextView
                            android:id="@+id/bomb_number"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3"/>
                </LinearLayout>




        </LinearLayout>

</RelativeLayout>