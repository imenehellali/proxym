<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup_layout"
    tools:context=".PopupScreen"
    android:background="@color/transparent"
    >
    <Button
        android:textSize="8sp"
        android:text="attack"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_shape"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/attack_button"/>
    <Button
        android:textSize="8sp"
        android:text="ask for resource"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_shape"

        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/ask_for_resource_button"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="100dp"
        android:id="@+id/ask_resource_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/animal"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:src="@drawable/animal"
            android:background="@drawable/button_shape"/>
        <ImageView
            android:id="@+id/iron"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:src="@drawable/iron"
            android:background="@drawable/button_shape"/>

        <ImageView
            android:id="@+id/leaf"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:src="@drawable/leaf"
            android:background="@drawable/button_shape"/>

        <ImageView
            android:id="@+id/bomb"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:src="@drawable/bomb"
            android:background="@drawable/button_shape"/>

    </LinearLayout>

</LinearLayout>